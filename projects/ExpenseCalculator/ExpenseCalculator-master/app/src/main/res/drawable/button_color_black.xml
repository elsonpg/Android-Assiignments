<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/middle_orange" android:endColor="@color/end_orange" android:angle="270.0" />
            <stroke android:width="@dimen/button_stroke_focused" android:color="@color/lightOrange" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:left="@dimen/button_padding" android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="@color/start_disabled" android:endColor="@color/end_disabled" android:angle="270.0" android:centerColor="@color/end_disabled" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/lightGrey" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:left="@dimen/button_padding" android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/middle_black" android:endColor="@color/end_black" android:angle="270.0" android:centerColor="@color/end_black" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/black" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:left="@dimen/button_padding" android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" />
        </shape>
    </item>
</selector>