<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="LayoutLeftMain">
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="LayoutRightMain" parent="@style/LayoutLeftMain">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="ButtonMain">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_color_black</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">@dimen/button_main_vertical_padding</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">@dimen/button_main_vertical_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="ImageButtonCircle">
        <item name="android:layout_width">@dimen/button_main_image_size</item>
        <item name="android:layout_height">@dimen/button_main_image_size</item>
        <item name="android:layout_margin">@dimen/button_main_image_margin</item>
        <item name="android:contentDescription">@string/hello_world</item>
    </style>
    <style name="Toolbar_Popup" parent="AppTheme">
        <item name="android:textColorPrimary">#000</item>
        <!--  <item name="android:background">@color/dark_blue</item> -->
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>
</resources>
